<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.douglimar.surpresinha_megasena">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_surpresinha_mega"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_surpresinha_mega_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ConfiguradorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WebviewActivity" />
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result2"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>